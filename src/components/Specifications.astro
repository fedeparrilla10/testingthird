---
import LongSection from './LongSection.astro';
import { firstTable, secondTable, specsImgs } from '../data/specifications.js';
---

<LongSection
  title="ESPECIFICACIONES"
  subtitle="Detalles tÃ©cnicos"
  color="black"
  pt="pt-10"
  textSize="text-[40px]"
>
  <article
    slot="main"
    class="text-black flex flex-col items-center justify-center gap-10 w-screen"
  >
    <div class="flex flex-col md:flex-row gap-10 pt-10">
      {
        specsImgs.map((spec) => {
          return (
            <div class="flex flex-col justify-center items-center gap-5 w-full">
              <img
                src={spec.img}
                alt={spec.name}
                class="w-20 h-14 md:w-16 md:h-12"
              />
              <div>
                <p class="text-md font-semibold">{spec.name}</p>
                {spec.subtitle && <p class="text-sm">{spec.subtitle}</p>}
              </div>
            </div>
          );
        })
      }
    </div>

    <div
      class="flex justify-around flex-wrap items-center gap-5 text-black text-md xl:text-[16px] p-10"
    >
      <div class="table-1">
        <table class="table-auto">
          <tbody>
            {
              firstTable.map((table) => {
                return (
                  <tr>
                    <td class="border border-zinc-700 p-1 2xl:p-2 font-bold max-w-sm max-h-2xl">
                      {table.title}
                    </td>
                    <td class="border border-zinc-700 p-1 2xl:p-2 max-w-sm max-h-2xl text-md">
                      {table.description}
                    </td>
                  </tr>
                );
              })
            }
          </tbody>
        </table>
      </div>
      <div class="table-2">
        <table class="table-auto">
          <tbody>
            {
              secondTable.map((table) => {
                return (
                  <tr>
                    <td class="border border-zinc-700 p-1 2xl:p-2 font-bold max-w-sm max-h-2xl">
                      {table.title}
                    </td>
                    <td class="border border-zinc-700 p-1 2xl:p-2 max-w-sm max-h-2xl">
                      {table.description}
                    </td>
                  </tr>
                );
              })
            }
          </tbody>
        </table>
      </div>
    </div>
  </article>

  <div slot="footer" class="pb-10">
    <a
      class="border-[3px] border-black backdrop-blur-sm text-sm rounded font-bold text-black px-12 py-2 inline-block hover:bg-white hover:text-black transition-colors"
      href="#buysection"
    >
      COMPRAR AHORA</a
    >
  </div>

  <div
    slot="background"
    class="bg-gradient-to-r from-gray-300 to-gray-100 object-center object-cover h-full w-full"
  >
  </div>
</LongSection>
