---
import Section from './Section.astro';
import { videoData } from '../data/video';
---

<Section>
  <article
    slot="main"
    class="text-zinc-950 flex flex-col xl:flex-row items-center justify-center"
  >
    <div
      class="flex flex-col lg:flex-row gap-10 2xl:gap-12 justify-center items-center xl:pt-12 px-1"
    >
      <div class="flex flex-col gap-2 xl:gap-4 max-w-6xl lg:order-2">
        <h2
          class="text-[32px] xl:text-[40px] font-bold tracking-widest text-black underline underline-offset-8"
        >
          {videoData[3].title}
        </h2>
        <p class="text-xl">
          {videoData[3].description}
        </p>
      </div>
      <video
        loop
        autoplay
        muted
        playsinline
        src={videoData[3].src}
        class="w:1/2 md:w-2/4 rounded-3xl lg:order-1"></video>
    </div>
  </article>

  <div slot="footer" class="pb-10">
    <a
      class="border-[3px] border-black backdrop-blur-sm text-sm rounded font-bold text-black px-12 py-2 inline-block hover:bg-white hover:text-black transition-colors"
      href="#buysection"
    >
      COMPRAR AHORA</a
    >
  </div>

  <div
    slot="background"
    class="bg-gradient-to-r from-gray-300 to-gray-200 object-center object-cover h-full w-full"
  >
  </div>
</Section>
